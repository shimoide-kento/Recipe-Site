<% if @recipe.errors.any? %>
<div class="error_explanation">
  <h2><%= @recipe.errors.count %>errors prohibited this recipe from being saved:</h2>
  <ul>
    <% @recipe.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Recipe</h1>

        <%= form_for(@recipe) do |f| %>
        <div class="field row">
          <label for="recipe_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12 recipe_title" %>
        </div>
        <div class="field row">
          <label for="recipe_opinion">Opinion</label>
          <%= f.text_area :body, class: "col-xs-12 recipe_body" %>
        </div>

        <div class="action row">
          <%= f.submit 'Update Recipe', class: "btn btn-primary col-xs-12" %>
        </div>
        <% end %>
        <%= link_to "Show", recipe_path(@recipe) %>
        |
        <%= link_to "Back", recipes_path %>
      </div>
    </div>
  </div>
</div>