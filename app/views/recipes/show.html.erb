<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= render 'users/info', user: @recipe.user %>
      <%= render 'recipes/form', recipe: @recipe_new %>
    </div>

    <div class="col-xs-8">
      <table class="table table-striped">
        <h1>Recipe detail</h1>
      </table>

      <thead>
        <tr>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@recipe.user) do %>
            <%= attachment_image_tag(@recipe.user, :profile_image, :fill, 100, 100, class: "img-circle profile-thumb", fallback: "no_image.jpg" ) %>
            <%= @recipe.user.name %>
            <% end %>
          </td>
          <td><%= link_to @recipe.title, recipe_path(@recipe) %></td>
          <td><%= @recipe.body %></td>
          <% if @recipe.user_id == current_user.id %>
          <td><span class="label label-success"><%= link_to "Edit", edit_recipe_path(@recipe) %></td></span>
          <td><span class="label label-danger"><%= link_to "Destroy", recipe_path(@recipe), method: :delete, "data-confirm" => "Are you sure?" %></td></span>
          <% end %>
        </tr>
      </tbody>
    </div>
  </div>
</div>